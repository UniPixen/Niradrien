<section id="titre-page">
    <div class="container">
        <div class="row">
            <div id="titre" class="span7">
                <h1 class="page-title">{$lang.logo_brand}</h1>
            </div>
            <div id="breadcrumbs" class="span5">
                <a href="/">{$lang.home}</a> \
                <a href="/about">{$lang.help}</a>
            </div>
        </div>
    </div>
</section>
  
<section id="conteneur">
    <div id="brand" class="container">
        <div class="row">
            <div class="span8">
                {$lang.logo_brand_text1}
            </div>
            <div class="span4">
                {$logo_brand_text2}
            </div>
        </div>

        <div class="title-row row">
            <div class="span12">
                <h2>{$lang.downloads}</h2>
            </div>
        </div>
        <div id="brand-downloads" class="brand-row row">
            <div id="brand-logo" class="span6">
                <div class="box">
                    <div class="image">
                        <img src="/static/images/logo-brand.svg" alt="{$lang.logo}" />
                    </div>
                    <a href="/static/uploads/logos/HadrienDesign-Logo.zip" class="btn btn-little-shadow">
                        <i class="hd-download"></i>
                        {$lang.download_logo}
                    </a>
                </div>
            </div>
            <div id="brand-icon" class="span6">
                <div class="box">
                    <div class="image">
                        <img src="/static/images/icon-brand.svg" alt="{$lang.icon}" />
                    </div>
                    <a href="/static/uploads/logos/HadrienDesign-Icon.zip" class="btn btn-little-shadow">
                        <i class="hd-download"></i>
                        {$lang.download_icon}
                    </a>
                </div>
            </div>
        </div>

        <div class="title-row row">
            <div id="brand-colors" class="span8">
                <h2>{$lang.colors}</h2>
                <div class="box">
                    <div class="color">
                        <span class="color-rectangle" style="background: #afd23d;"></span>
                        <span class="color-name">{$lang.color_atlantis_green}</span>
                        <span class="color-code">#afd23d</span>
                    </div>
                    <div class="color">
                        <span class="color-rectangle" style="background: #424242;"></span>
                        <span class="color-name">{$lang.color_thundora_grey}</span>
                        <span class="color-code">#424242</span>
                    </div>
                    <div class="color">
                        <span class="color-rectangle" style="background: #ffffff;"></span>
                        <span class="color-name">{$lang.color_white}</span>
                        <span class="color-code">#ffffff</span>
                    </div>
                </div>
            </div>
            <div id="brand-fonts" class="span4">
                <h2>{$lang.fonts}</h2>
                <div class="box">
                    <div class="font">
                        <span class="font-name" style="font-family: 'Avenir Next Rounded'; font-size: 20px;">Avenir Next Rounded</span>
                        <span class="font-size">18px</span>
                    </div>
                    <div class="font">
                        <span class="font-name" style="font-size: 14px;">Open Sans</span>
                        <span class="font-size">14px</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="title-row row">
            <div class="span12">
                <h2>{$lang.some_examples}</h2>
            </div>
        </div>
        <div id="brand-examples" class="row">
            <div class="box light span3 correct">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-1.svg');"></span>
            </div>
            <div class="box light span3 wrong">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-2.svg');"></span>
            </div>
            <div class="box light span3 wrong">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-3.svg');"></span>
            </div>
            <div class="box light span3 wrong">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-4.svg');"></span>
            </div>
            <div class="box light span3 wrong">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-5.svg');"></span>
            </div>
            <div class="box light span3 correct">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-6.svg');"></span>
            </div>
            <div class="box light span3 wrong">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-7.svg');"></span>
            </div>
            <div class="box dark span3 correct">
                <span class="logo-example" style="background-image: url('/static/images/brand/example-8.svg');"></span>
            </div>
        </div>
    </div>
</section>